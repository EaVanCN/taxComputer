/**index.wxss**/
.top{
  display: flex;
  flex-direction: column;
  width:100%;
}
.input-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
  margin-top:18px;
  background: #fff;
  height:40px;
  font-size:13px;
}
.input-container label{
  display: inline-block;
  flex-basis:25%;
  padding:0 20px;
}
.input-container input{
  display: inline-block;
  text-align: right;
  flex-basis:75%;
  padding:0 8px;
}
.switch-bar{
  display: flex;
  justify-content: space-between;
  height:20px;
  line-height:20px;
  font-size:12px;
}
.switch-txt{

  padding:0 5px;
  text-align: center;
  color:#179B16;
}
.switch-line{

  flex-grow: 1;
  flex-shrink: 1;
  background: repeating-linear-gradient(#f4f4f4,#f4f4f4 48%,#179B16 48%,#179B16 53%);
}
.switch-bar{
  margin-bottom:-18px;
  padding:5px 0;
}
.switch-status{
  flex-basis: 10%;
  position: relative;
}
.switch-status::after{
  position: absolute;
  content: "";
  width:0;
  height:0;
  border: 5px;
  border-style: solid;
}
.nonSel::after{
  left:8px;
  top:5px;
  border-color: transparent transparent transparent #179B16;
}
.sel::after{
  left:8px;
  top:8px;
  border-color: #179B16 transparent transparent transparent ;
}
.bottom{
  width: 100%;
  flex-basis:20%;
  display: flex;
  justify-content: center;
  align-items:center;
}

.bottom button{
  width:40%;
  height:30px;
  line-height:30px;
  font-size:14px;
}
.input-checkbox label{
  padding: 10px 10px;
  font-size: 14px;
  color: #179B16;
}
.input-checkbox checkbox .wx-checkbox-input{
  width:10px;
  height:10px;
}
.input-disabled{
  color: #999;
}